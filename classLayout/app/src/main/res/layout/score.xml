<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="Team 1"
            android:layout_margin="30dp"
            android:textSize="12pt"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnScore1"
            android:background="@drawable/ic_launcher"
            android:layout_margin="2dp"
            android:text="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnScore2"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher"
            android:layout_margin="2dp"
            android:text="2"/>

        <Button
            android:layout_width="0dp"
            android:background="@drawable/ic_launcher"
            android:layout_height="wrap_content"
            android:id="@+id/btnScore3"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="3"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nilaiTeam1"
            android:text="1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            />

    </RelativeLayout>



    <!-- Team 2 -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Team 2"
            android:layout_margin="30dp"
            android:textSize="12pt"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnScore1Team2"
            android:background="@drawable/ic_launcher"
            android:layout_margin="2dp"
            android:text="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnScore2Team2"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher"
            android:layout_margin="2dp"
            android:text="2"/>

        <Button
            android:layout_width="0dp"
            android:background="@drawable/ic_launcher"
            android:layout_height="wrap_content"
            android:id="@+id/btnScore3Team2"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="3"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nilaiTeam2"
            android:text="1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            />

    </RelativeLayout>


</LinearLayout>